<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
            android:id="@+id/videoListImage"
            android:layout_height="match_parent"
            android:layout_width="120dp"
        />
    <TextView
            android:id="@+id/videoListPrice"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_listing_subtitle"
            android:text="$1,200,000"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center"
            />
    <LinearLayout
            android:id="@+id/videoItemContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/videoListImage"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:orientation="vertical"
            android:background="@color/lightGray"
            >
        <TextView
                android:id="@+id/videoDisplayName"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:textSize="22sp"
                android:text="Cheesy Tower"
                android:textColor="@color/primaryDark"
                android:maxLines="1"
                />
        <TextView
                android:id="@+id/videoAddress"
                android:layout_height="35dp"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:text="123 Mercer St"
                />
        <TextView
                android:id="@+id/videoDistance"
                android:layout_height="30dp"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:text="1 mile from you!"
                android:textStyle="bold"
                />
    </LinearLayout>
</RelativeLayout>
